{
  "name": "secure-messenger-desktop",
  "productName": "Secure Messenger",
  "version": "1.0.0",
  "description": "Cross-platform desktop messenger with secure chat list and sync simulation",
  "main": "dist/main/main/main.js",
  "homepage": "./",
  "scripts": {
    "start": "concurrently --kill-others \"npm run dev:renderer\" \"wait-on tcp:3000 && npm run dev:main\"",
    "dev:renderer": "webpack serve --config webpack.config.js --hot",
    "dev:main": "NODE_ENV=development tsc -p tsconfig.main.json --noEmit && NODE_ENV=development electron . --disable-gpu --no-sandbox",
    "build": "npm run build:renderer && npm run build:main",
    "build:renderer": "webpack --mode production",
    "build:main": "tsc -p tsconfig.main.json",
    "package": "npm run build && electron-builder --dir",
    "package:all": "npm run build && electron-builder -mwl",
    "postinstall": "electron-builder install-app-deps",
    "lint": "eslint . --ext .ts,.tsx"
  },
  "keywords": [
    "electron",
    "react",
    "typescript",
    "messenger",
    "secure",
    "chat",
    "sqlite"
  ],
  "author": "Collins <your.email@example.com>",
  "license": "ISC",
  "dependencies": {
    "@reduxjs/toolkit": "^2.11.2",
    "@types/react-window": "^1.8.8",
    "better-sqlite3": "^11.5.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-redux": "^9.1.2",
    "react-window": "^1.8.11",
    "ws": "^8.18.0"
  },
  "devDependencies": {
    "@types/node": "^22.10.1",
    "@types/react": "^18.3.18",
    "@types/react-dom": "^18.3.5",
    "buffer": "^6.0.3",
    "concurrently": "^9.1.0",
    "cross-env": "^7.0.3",
    "crypto-browserify": "^3.12.1",
    "css-loader": "^7.1.2",
    "electron": "^33.0.2",
    "electron-builder": "^25.1.8",
    "events": "^3.3.0",
    "html-webpack-plugin": "^5.6.3",
    "stream-browserify": "^3.0.0",
    "style-loader": "^4.0.0",
    "ts-loader": "^9.5.1",
    "typescript": "^5.7.2",
    "wait-on": "^8.0.1",
    "webpack": "^5.96.1",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^5.1.0"
  },
  "build": {
    "appId": "com.yourname.securemessenger",
    "productName": "Secure Messenger",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "node_modules/**/*"
    ]
  }
}
